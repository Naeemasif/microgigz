
<br>
<div class="row">
  <div class="col-lg-12">
    <%if !notice.blank?%>
       <div class="alert alert-success"><p id="notice"><%= notice %></p></div>
    <%end%>
    <% notice = "" %>
    <br>
    <table class="table">
      <tr>
        <td>
          <b>Title:</b>
        </td>
        <td>
          <p><%= @lead.title %></p>
        </td>
      </tr>
      <tr>
        <td>
          <b>Description:</b>
        </td>
        <td>
          <p><%= @lead.description %></p>
        </td>
      </tr>
      <tr>
        <td>
          <b>Client:</b>
        </td>
        <%@lead = Lead.find_by_id(params[:id]).client_id%>
        <%@client_name = Profile.where(profileable_id:@lead,profileable_type:"Client")%>
        <td>
          <p><%=link_to "#{@client_name[0].name}",client_path(id:@lead)%></p>
        </td>
      </tr>
    </table>
   </div>
</div>
<br/>
<table class="table">
  <tr>
    <td>
      <%= link_to 'Edit', edit_lead_path(@lead),:class=>"btn btn-default" %>
      <%= link_to 'Back', leads_path,:class=>"btn btn-default" %>
    </td>
  </tr>
</table>