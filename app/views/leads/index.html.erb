<script>
  function show_menu(x)
  {
     $("#menu"+ x.id).toggle(100);
  }
</script>
<div class="row">
  <div class="col-lg-12">
      <h2>Leads</h2>
      <br/>
      <table class="table">
          <tr class="background_color">
           <th class="color">Title</th>
           <th class="color">Description</th>
           <th class="color">Client</th>
           <th></th>
           <th></th>
           <th></th>
        </tr>
        <%i = 0%>
        <% @leads.each do |lead| %>
          <tr>
           <td><%=link_to "#{lead.title}",lead_path(id:lead.id)%></td>
           <td><%= lead.description %></td>
           <%@client = Profile.where(profileable_id:lead.client_id)%>
            <td><%=@client[0].name%></td>
            <td>
              <div><a href="#" onclick="return false;"><img src="/images/settings.png" height="25" id="<%=i%>" onclick="show_menu(this);" width="25"></a></div>

              <div style="width: 100px;height:70px;background: green;position: absolute;z-index: 1000;display: none" id="menu<%=i%>">
                <table class="table" style="border: 1px solid #DDDDDD;width: 100%;height: 100%">
                  <tr>
                    <td>
                      <%= link_to 'Edit', edit_lead_path(lead)%>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <%= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' }%>
                    </td>
                  </tr>
                </table>
              </div>
              <br>
            </td>
          </tr>
          <%i = i+1%>
        <% end %>
      </table>
  </div>
</div>
<br />
<div class="row">
  <div class="col-lg-12">
    <table>
      <tr>
        <td>
          <%= link_to 'New Lead', new_lead_path,:class=>"btn btn-default" %>
        </td>
        <td>
          <%= link_to 'Projects', projects_path,:class=>"btn btn-default" %>
        </td>
      </tr>
    </table>
  </div>
</div>