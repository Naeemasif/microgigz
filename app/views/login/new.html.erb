
<style>
     .radius_0
     {
         border-radius: 0px;
     }
</style>

<%= form_tag :action => :auth, :controller => :login, :method => :get do   %>

    <div class="container">
      <div class="row" style="margin: 100px 0px 0px 0px">
        <div class="col-lg-5" style="padding: 2% 0px 0px 31%" >

          <h2 style="color: #A1A1A1">Kantoor</h2>

        </div>
        <div class="col-lg-7">
          <div style="border-left: 1px solid #A1A1A1;width: 37%;height: 600px;padding: 5px 5px 5px 5px">
            <% if flash[:notice] %>
                <div class="alert alert-success">
                  <p id="notice" ><%= flash[:notice] %></p>
                </div>


            <% elsif flash[:alert] %>
                <div class="alert alert-danger">
                  <p id="alert" >
                    <%= flash[:alert] %>
                  </p>
                </div>
            <% end %>
            <br/>
            <span ><b>Login to system</b></span><br/>

            <span><%= text_field 'login','name',:class=>"form-control radius_0",:style => "height:27px",:placeholder=>"User Name" %></span><br/>

            <span><%= password_field 'login', 'password' ,:class=>"form-control radius_0",:style => "height:27px",:placeholder=>"Password" %></span> <br/>
            <span><%= submit_tag :submit ,:class=>"btn btn-default radius_0" %></span>
            <%= link_to "Sign in", new_user_session_path %><br />
          </div>
        </div>
      </div>
    </div>
<% end %>