
<%= form_tag :action => :auth, :controller => :login, :method => :get do   %>


    <div class="form-element">
      <label for="name">Username </label>
      <%= text_field 'login', 'name' , {:class=>"text-input"} %>
    </div>
    <div class="form-element">
      <label for="password">Password </label>
      <%= password_field 'login', 'password' , {:class=>"text-input"} %>
    </div>
    <%= submit_tag :submit %>
<% end %>
