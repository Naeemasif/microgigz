
<%= form_for(@resource) do |f| %>
    <% if @resource.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@resource.errors.count, "error") %> prohibited this project from being saved:</h2>
          <ul>
            <% @resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <%= f.fields_for @user do |builder| %>
        <div class="display-block">
          <b>Name</b>
          <br/>
          <%=builder.text_field :name,:class=>"form-control" %>
        </div>
        <div class="display-block">
          <b>Password</b>
          <br/>
          <%=builder.password_field :password,:class=>"form-control" %>
        </div>
        <div class="display-block">
          <b>Email</b>
          <br/>
          <%=builder.text_field :email,:class=>"form-control" %>
        </div>
        <div class="display-block">
          <b>Login id</b>
          <br/>
          <%=builder.text_field :login_id,:class=>"form-control" %>
        </div>
        <div class="display-block">
          <b>Telephone</b>
          <br/>
          <%=builder.text_field :telephone,:class=>"form-control" %>
        </div>
        <div class="display-block">
          <%=builder.hidden_field :userable_type,:value=>"Resource",:class=>"form-control" %>
        </div>
    <%end%>
    <div class="display-block">
      <%= f.hidden_field :availability,:value=>"Available",:class=>"form-control"%>
    </div>
    <br/>
    <div class="display-block">
      <%=  submit_tag("Save", :class => 'btn btn-default') %>
      <%= link_to 'Back', clients_path,:class=>"btn btn-default" %>
    </div>
    <br/>
<%end%>
