  <div class="col-lg-12">

    <table>
      <tr>
        <td>
          <%= link_to 'Profiles', profiles_path,:class=>"btn btn-default" %>
        </td>
        <td>
          <%= link_to 'Leads', leads_path,:class=>"btn btn-default" %>
        </td>
        <td>
          <%= link_to 'New Project', new_project_path,:class=>"btn btn-default" %>
        </td>
      </tr>
    </table>

  </div>
</div>