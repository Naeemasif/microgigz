

<div class="row">
  <div class="col-lg-12">
   <h1>Project</h1>
    <br>
   <p id="notice"><%= notice %></p>
   <table class="table">
     <tr>
       <td>
         <b>Title:</b>
       </td>
       <td>
         <%= @project.title %>
       </td>
     </tr>
     <tr>
       <td>
         <b>Start date:</b>
       </td>
       <td>
         <%= @project.start_date %>
       </td>
     </tr>
     <%@project = Project.find_by_id(params[:id])%>
     <%@pm_id   = Profile.find_by_profileable_id(@project.pm_id)%>
     <tr>
       <td>
         <b>Pm name:</b>
       </td>
       <td>
         <%= @pm_id.name %>
       </td>
     </tr>
     <tr>
       <td>
         <b>Status:</b>
       </td>
       <td>
         <%= @project.status %>
       </td>
     </tr>
     <tr>
       <td>
         <b>Lead:</b>
       </td>
       <td>
         <%= @project.lead_id %>
       </td>
     </tr>
     <tr>
       <td>
         <b>Client:</b>
       </td>
       <td>
         <%= @project.client_id %>
       </td>
     </tr>
     <tr>
       <td>
         <%= link_to 'Edit', edit_project_path(@project),:class=>"btn btn-default" %>
         <%= link_to 'Back', projects_path,:class=>"btn btn-default" %>
       </td>
       <td></td>
     </tr>
   </table>
  </div>
</div>


