<div class="list-group border-margin-client-show">
  <li class="list-group-item border-none">
    <h4 class="list-group-item-heading margin-title">Project</h4>
    <p class="list-group-item-text"> <%= @project.title %></p>
  </li>
  <li class="list-group-item">
    <h4 class="list-group-item-heading">Description</h4>
    <p class="list-group-item-text"> <%= @project.lead.description %></p>
  </li>
  <li class="list-group-item">
    <h4 class="list-group-item-heading">Start Date</h4>
    <p class="list-group-item-text"> <%= @project.start_date %></p>
  </li>
  <li class="list-group-item">
    <h4 class="list-group-item-heading">Lead</h4>
    <p class="list-group-item-text"><%=link_to "#{@project.lead.title}",lead_path(id:@project.lead.id)%></p>
  </li>
  <li class="list-group-item">
    <h4 class="list-group-item-heading">Client</h4>
    <p class="list-group-item-text"><%=link_to "#{@project.client.user.name}",client_path(id:@project.client.id)%></p>
  </li>
